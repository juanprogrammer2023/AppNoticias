<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema nocturno de la aplicación -->
    <style name="Theme.TiendaEcci" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores principales para el tema nocturno -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Configuración de la barra de estado -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">true</item>
    </style>

</resources>
